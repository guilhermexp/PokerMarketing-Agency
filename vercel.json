{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "npm install --legacy-peer-deps --include=dev",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": null,
  "functions": {
    "api/index.mjs": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": "server/**"
    },
    "api/cron/scheduled-posts.mjs": {
      "maxDuration": 60,
      "memory": 512,
      "includeFiles": "server/**"
    }
  },
  "rewrites": [
    { "source": "/health", "destination": "/api/index.mjs" },
    { "source": "/api/(.*)", "destination": "/api/index.mjs" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/scheduled-posts",
      "schedule": "*/5 * * * *"
    }
  ]
}
