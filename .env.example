# =============================================================================
# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real credentials to version control
# =============================================================================

# Google Gemini API (for AI text/image generation)
GEMINI_API_KEY=your_gemini_api_key

# FAL.ai (for image/video generation)
FAL_KEY=your_fal_key

# Replicate (image generation provider - used in provider chain)
REPLICATE_API_TOKEN=your_replicate_api_token

# Image provider chain (comma-separated, in priority order)
# Valid values: gemini, fal, replicate
# Providers without API keys are automatically skipped
IMAGE_PROVIDERS=gemini,fal

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=your_blob_token

# =============================================================================
# Database
# =============================================================================

# Neon PostgreSQL Database
DATABASE_URL=postgresql://user:password@your-project.neon.tech/neondb?sslmode=require

# Redis (for scheduled posts only)
REDIS_URL=redis://default:password@your-redis.railway.internal:6379

# =============================================================================
# Authentication (Better Auth)
# =============================================================================

# Better Auth secret (required - generate with: openssl rand -hex 32)
BETTER_AUTH_SECRET=your_better_auth_secret

# =============================================================================
# AI Models (OpenRouter)
# =============================================================================

OPENROUTER_API_KEY=your_openrouter_api_key

# =============================================================================
# Security & Access Control
# =============================================================================

# Super admin emails (comma-separated, server-side only - NOT exposed to client)
SUPER_ADMIN_EMAILS=admin@yourdomain.com

# CORS allowed origins (comma-separated)
# Example: https://yourdomain.com,https://app.yourdomain.com
# IMPORTANT: Set this in production to restrict cross-origin requests
CORS_ORIGINS=https://yourdomain.com

# CSRF secret (required for production - generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
CSRF_SECRET=your_csrf_secret

# Environment (development or production)
NODE_ENV=development
