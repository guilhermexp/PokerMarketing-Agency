# =============================================================================
# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real credentials to version control
# =============================================================================

# Google Gemini API (for AI text/image generation)
GEMINI_API_KEY=your_gemini_api_key

# FAL.ai (for video generation)
FAL_KEY=your_fal_key

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=your_blob_token

# =============================================================================
# Database
# =============================================================================

# Neon PostgreSQL Database
DATABASE_URL=postgresql://user:password@your-project.neon.tech/neondb?sslmode=require

# Redis (for BullMQ job processing)
REDIS_URL=redis://default:password@your-redis.railway.internal:6379

# =============================================================================
# Authentication (Clerk)
# =============================================================================

# Clerk Publishable Key (safe for client-side)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY

# Clerk Secret Key (server-side only, NEVER expose to client)
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY

# =============================================================================
# AI Models (OpenRouter)
# =============================================================================

OPENROUTER_API_KEY=your_openrouter_api_key

# =============================================================================
# Security & Access Control
# =============================================================================

# Super admin emails (comma-separated, server-side only - NOT exposed to client)
SUPER_ADMIN_EMAILS=admin@yourdomain.com

# CORS allowed origins (comma-separated)
# Example: https://yourdomain.com,https://app.yourdomain.com
# IMPORTANT: Set this in production to restrict cross-origin requests
CORS_ORIGIN=https://yourdomain.com

# Environment (development or production)
NODE_ENV=development
